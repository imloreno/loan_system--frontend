{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@application/*": [
        "./src/application/*"
      ],
      "@infraestructure/*": [
        "./src/infraestructure/*"
      ],
      "@presentation/*": [
        "./src/presentation/*"
      ],
    },
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  }
}